{
    "@context": [
        "https://www.w3.org/2022/wot/td/v1.1",
        { "saref": "https://w3id.org/saref#" }
    ],
    "id": "urn:dev:ops:WoTSP-0001",
    "title": "MySPThing",
    "@type": "saref:Device",
    "securityDefinitions": {
      "nosec_sc": {
        "scheme": "nosec"
      }
    },
    "security": ["nosec_sc"],
    "base": "http://emulatedspeaker.local:8888/",
    "properties": {
        "power": {
            "title": "power",
            "type": "object",
            "properties": {
               "status": {
                  "type": "boolean"
               }
            },
            "forms": [{
              "op": "readproperty",
              "contentType": "application/json;charset=utf-8",
              "href": "power"
            }]
        }
    },
    "actions": {
        "toggle": {
            "safe": true,
            "idempotent": false,
            "title": "togglePower",
            "@type": "saref:ToggleCommand",
            "forms": [{
              "op": "invokeaction",
              "contentType": "application/json;charset=utf-8",
              "href": "toggle"
            }]
        },
        "setVolume": {
            "safe": true,
            "idempotent": false,
            "title": "setVolume",
            "@type": "saref:Level control function",
            "forms": [{
                "op": "invokeaction",
                "contentType": "application/json;charset=utf-8",
                "href": "setvolume"
            }]
        },
        "playAudio": {
            "safe": true,
            "idempotent": false,
            "title": "playAudio",
            "forms": [{
              "op": "invokeaction",
              "contentType": "application/json;charset=utf-8",
              "href": "playaudio"
            }]
        },
        "launchNewsApp": {
            "safe": true,
            "idempotent": false,
            "title": "launchNewsApp",
            "forms": [{
                "op": "invokeaction",
                "contentType": "application/json;charset=utf-8",
                "href": "launchnewsapp"
            }]
        }
    },
    "events": {
      "weatherAlert": {
          "title": "weatherAlert",
          "data": { "type": "object" },
          "forms": [
            {
              "op": "subscribeevent",
              "contentType": "application/json;charset=utf-8",
              "subprotocol": "longpoll",
              "href": "weatheralert"
            },
            {
              "op": "subscribeevent",
              "contentType": "application/json;charset=utf-8",
              "href": "ws://emulatedspeaker.local:8888/weatheralert"
            }
          ]
      }
    }
}
