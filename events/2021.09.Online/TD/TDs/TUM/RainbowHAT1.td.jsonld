                {
                    "contentType": "application/json",
                    "href": "https://esiremotelab.esi.ei.tum.de:8081/RainbowHAT1/properties/leds",
                    "op": [
                        "readproperty",
                        "writeproperty"
                    ]
                }
            ],
            "observable": false,
            "propertyNames": {
                "enum": [
                    "0",
